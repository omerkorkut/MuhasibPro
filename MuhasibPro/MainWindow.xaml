<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MuhasibPro.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MuhasibPro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="MuhasibPro">

    
    <Window.SystemBackdrop>
        <MicaBackdrop />
        
    </Window.SystemBackdrop>


    <Grid>
        <Grid.Resources>
            <local:DateTimeToStringConverter x:Key="DateTimeToStringConverter"/>
            <local:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Padding="20" Spacing="10">
            <TextBlock Text="Veritabanı Analiz Aracı" 
                       FontSize="24" 
                       FontWeight="SemiBold"/>

            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="DatabasePathTextBox" 
                         PlaceholderText="Veritabanı yolu..."
                         Text="test.db"/>

                <Button Grid.Column="1"
                        x:Name="AnalyzeButton"
                        Content="Analiz Başlat"
                        Click="OnAnalyzeClick"
                        IsEnabled="{x:Bind IsNotAnalyzing, Mode=OneWay}"/>
            </Grid>

            <ProgressBar x:Name="OverallProgressBar"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         Visibility="Collapsed"/>
        </StackPanel>

        <!-- Progress Log -->
        <Border Grid.Row="1" 
                Margin="20,0,20,10" 
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="1"
                CornerRadius="4">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Log Header -->
                <Border Grid.Row="0" 
                        Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                        Padding="10"
                        BorderThickness="0,0,0,1"
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Analiz Logları" 
                                   VerticalAlignment="Center"/>

                        <Button Grid.Column="1"
                                Content="Temizle"
                                Click="OnClearLogClick"
                                IsEnabled="{x:Bind HasLogs, Mode=OneWay}"/>
                    </Grid>
                </Border>

                <!-- Log Messages -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ListBox x:Name="LogMessagesControl"
                                  Padding="10"
                                  >
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="local:LogMessageViewModel">
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                     
                                    <TextBlock Grid.Column="0"
                                               Text="{x:Bind Timestamp}"
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               FontSize="12"
                                               Margin="0,0,10,0"
                                               VerticalAlignment="Top"/>

                                    <!-- Message -->
                                    <Border Grid.Column="1"
                                            
                                            CornerRadius="4"
                                            Padding="10">
                                        <TextBlock Text="{x:Bind Message}"
                                                   
                                                   TextWrapping="WrapWholeWords"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Results Panel -->
        <Grid Grid.Row="2" 
              Margin="20,0,20,20"
              Visibility="{x:Bind ShowResults, Mode=OneWay}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Result Cards -->
            <Border Grid.Row="0" Grid.Column="0" 
                    Margin="0,0,10,0"
                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                    CornerRadius="4"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Bağlantı Durumu"
                               FontSize="12"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    <TextBlock x:Name="ConnectionStatusText"
                               Text="Bilinmiyor"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="1"
                    Margin="5,0"
                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                    CornerRadius="4"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Tablo Sayısı"
                               FontSize="12"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    <TextBlock x:Name="TableCountText"
                               Text="0"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="2"
                    Margin="5,0"
                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                    CornerRadius="4"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Veritabanı Durumu"
                               FontSize="12"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    <TextBlock x:Name="DatabaseStatusText"
                               Text="Bilinmiyor"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="3"
                    Margin="10,0,0,0"
                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                    CornerRadius="4"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Migration"
                               FontSize="12"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    <TextBlock x:Name="MigrationStatusText"
                               Text="0/0"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <!-- Detailed Results -->
            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                    Margin="0,10,0,0"
                    Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                    CornerRadius="4"
                    Padding="15"
                    Visibility="{x:Bind ShowDetails, Mode=OneWay}">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="Detaylı Bilgiler"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Veritabanı Adı:"
                                       Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       x:Name="DatabaseNameText"
                                       FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Versiyon:"
                                       Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       x:Name="VersionText"/>

                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Boş Veritabanı:"
                                       Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1"
                                       x:Name="IsEmptyText"/>

                            <TextBlock Grid.Row="3" Grid.Column="0"
                                       Text="Hata Durumu:"
                                       Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1"
                                       x:Name="HasErrorText"/>

                            <TextBlock Grid.Row="4" Grid.Column="0"
                                       Text="Analiz Zamanı:"
                                       Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="4" Grid.Column="1"
                                       x:Name="AnalysisTimeText"/>
                            <Button Grid.Row="5" Grid.Column="0"
                                    Content="Güncelle" Click="Button_Click"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
