<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="MuhasibPro.Views.Firma.FirmaDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MuhasibPro.Controls"
    xmlns:converters="using:MuhasibPro.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewMali="using:MuhasibPro.Views.Firmalar.Details"
    xmlns:viewmodels="using:MuhasibPro.ViewModels.ViewModels.Sistem.Firmalar"
    xmlns:views="using:MuhasibPro.Views.Firma"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BindingTypeConverter x:Key="BindingTypeConverter" />
        <DataTemplate x:Key="DetailsTemplate" x:DataType="viewmodels:FirmaDetailsViewModel">
            <Border Style="{StaticResource GlassPanel}">
                <controls:FluidGrid
                    Margin="12,18,6,6"
                    controls:ValidationBehavior.Errors="{x:Bind ValidationErrors, Mode=OneWay}"
                    ColumnSpacing="12"
                    Columns="2"
                    RowSpacing="12">
                    <TextBlock
                        controls:FluidGrid.ColumnSpan="2"
                        Style="{StaticResource FormsSection}"
                        Text="Firma Bilgileri" />
                    <controls:FormTextBox
                        controls:ValidationHelper.PropertyName="KisaUnvani"
                        Header="Kısa Ünvan"
                        Text="{x:Bind EditableItem.KisaUnvani, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <controls:FormTextBox
                        Header="Firma Kodu"
                        IsReadOnly="True"
                        Text="{x:Bind Item.FirmaKodu, Mode=OneWay}"
                        Visibility="{x:Bind ItemIsNew, Converter={StaticResource InverseBoolToVisibilityConverter}}" />

                    <controls:FormTextBox
                        controls:FluidGrid.ColumnSpan="2"
                        controls:ValidationHelper.PropertyName="TamUnvani"
                        Header="Tam Ünvan"
                        Text="{x:Bind EditableItem.TamUnvani, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />

                    <controls:FluidGrid
                        ColumnSpacing="6"
                        Columns="2"
                        MinColumnWidth="60"
                        RowSpacing="12">
                        <controls:FormTextBox
                            controls:ValidationHelper.PropertyName="YetkiliKisi"
                            Header="Yetkili Kişi"
                            Text="{x:Bind EditableItem.YetkiliKisi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:FormTextBox
                            controls:ValidationHelper.PropertyName="Telefon1"
                            DataType="Phone"
                            Header="Telefon"
                            Text="{x:Bind EditableItem.Telefon1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:FluidGrid>
                    <controls:FluidGrid
                        ColumnSpacing="6"
                        Columns="2"
                        MinColumnWidth="60"
                        RowSpacing="12">
                        <controls:FormTextBox Header="TCK No" Text="{x:Bind EditableItem.TCNo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:FormTextBox Header="Para Birimi" Text="{x:Bind EditableItem.PBu1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:FluidGrid>

                    <TextBlock
                        controls:FluidGrid.ColumnSpan="2"
                        Style="{StaticResource FormsSection}"
                        Text="Adres / Fatura Bilgileri" />

                    <controls:FluidGrid
                        ColumnSpacing="6"
                        Columns="2"
                        MinColumnWidth="60"
                        RowSpacing="12">
                        <controls:FormTextBox Header="İl" Text="{x:Bind EditableItem.Il, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:FormTextBox Header="İlçe" Text="{x:Bind EditableItem.Ilce, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:FluidGrid>

                    <controls:FluidGrid
                        ColumnSpacing="6"
                        Columns="2"
                        MinColumnWidth="60"
                        RowSpacing="12">
                        <controls:FormTextBox
                            DataType="Integer"
                            Header="Posta Kodu"
                            Text="{x:Bind EditableItem.PostaKodu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:FormTextBox Header="Telefon 2" Text="{x:Bind EditableItem.Telefon2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:FluidGrid>

                    <controls:FormTextBox
                        controls:FluidGrid.ColumnSpan="2"
                        AcceptsReturn="True"
                        Header="Adres"
                        Text="{x:Bind EditableItem.Adres, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />

                    <controls:FluidGrid
                        ColumnSpacing="6"
                        Columns="2"
                        MinColumnWidth="60"
                        RowSpacing="12">
                        <controls:FormTextBox
                            DataType="Integer"
                            Header="Vergi No"
                            Text="{x:Bind EditableItem.VergiNo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:FormTextBox Header="Vergi Dairesi" Text="{x:Bind EditableItem.VergiDairesi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:FluidGrid>
                    <controls:FormTextBox Header="E-Posta" Text="{x:Bind EditableItem.Eposta, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                </controls:FluidGrid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MaxWidth="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border>
            <views:FirmaCard
                Margin="6"
                Item="{x:Bind ViewModel.FirmaDetails.Item, Mode=OneWay}"
                ViewModel="{x:Bind ViewModel.FirmaDetails}" />
        </Border>

        <controls:Details
            x:Name="details"
            Grid.Column="1"
            Margin="6"
            BackCommand="{x:Bind ViewModel.FirmaDetails.BackCommand}"
            CanGoBack="{x:Bind ViewModel.FirmaDetails.CanGoBack}"
            CancelCommand="{x:Bind ViewModel.FirmaDetails.CancelCommand}"
            DeleteCommand="{x:Bind ViewModel.FirmaDetails.DeleteCommand}"
            DetailsContent="{x:Bind ViewModel.FirmaDetails}"
            DetailsTemplate="{StaticResource DetailsTemplate}"
            EditCommand="{x:Bind ViewModel.FirmaDetails.EditCommand}"
            IsEditMode="{x:Bind ViewModel.FirmaDetails.IsEditMode, Mode=OneWay}"
            SaveCommand="{x:Bind ViewModel.FirmaDetails.SaveCommand}" />


    </Grid>
</UserControl>