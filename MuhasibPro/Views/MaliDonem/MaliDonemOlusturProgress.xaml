<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="MuhasibPro.Views.MaliDonem.MaliDonemOlusturProgress"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:MuhasibPro.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MuhasibPro.Views.MaliDonem"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:MuhasibPro.Business.ResultModels.TenantResultModels"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:StepDisplayConverter x:Key="StepDisplayConverter" />
        <converters:DurationDisplayConverter x:Key="DurationDisplayConverter" />
        <converters:StringFormatConverter x:Key="StringFormatConverter" />
    </UserControl.Resources>
    <Grid x:Name="ProcessPanel" Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}">
        <Grid Canvas.ZIndex="1000">
            <!--  Canvas.ZIndex kullan  -->

            <!--  Overlay  -->


            <!--  Process Container  -->
            <Border
                Width="500"
                MaxHeight="600"
                Padding="24"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{ThemeResource CardBackgroundFillColorDefault}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12">


                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Header  -->
                    <StackPanel
                        Grid.Row="0"
                        Margin="0,0,0,16"
                        Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <ProgressRing
                                Width="24"
                                Height="24"
                                IsActive="{x:Bind CreationViewModel.IsCreating, Mode=OneWay}"
                                Visibility="{x:Bind CreationViewModel.IsCompleted, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />

                            <TextBlock
                                FontSize="20"
                                FontWeight="SemiBold"
                                Text="Mali Dönem Oluşturuluyor" />
                        </StackPanel>

                        <TextBlock
                            FontSize="14"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="{x:Bind CreationViewModel.CurrentStepMessage, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <!--  Progress Bar  -->
                        <Grid Margin="0,8,0,0">
                            <ProgressBar
                                Height="6"
                                Maximum="100"
                                Value="{x:Bind CreationViewModel.ProgressPercentage, Mode=OneWay}">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Offset="0" Color="#0078D4" />
                                        <GradientStop Offset="1" Color="#4CC2FF" />
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>

                            <!--  StringFormat için TextBlock Binding'i  -->
                            <TextBlock
                                Margin="0,-20,0,0"
                                HorizontalAlignment="Right"
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorTertiaryBrush}">
                                <TextBlock.Text>
                                    <Binding Path="ViewModel.CreationViewModel.ProgressPercentage" RelativeSource="{RelativeSource Mode=TemplatedParent}">
                                        <Binding.Converter>
                                            <converters:StringFormatConverter Format="{}{0}%" />
                                        </Binding.Converter>
                                    </Binding>
                                </TextBlock.Text>
                            </TextBlock>

                            <!--  VEYA daha basiti: Converter olmadan  -->
                            <!--
    <TextBlock
        HorizontalAlignment="Right"
        Margin="0,-20,0,0"
        FontSize="11"
        Foreground="{ThemeResource TextFillColorTertiaryBrush}"
        Text="{x:Bind ViewModel.CreationViewModel.ProgressPercentage, Mode=OneWay}">
        <Run Text="{x:Bind ViewModel.CreationViewModel.ProgressPercentage, Mode=OneWay}"/>
        <Run Text="%"/>
    </TextBlock>
                            -->
                        </Grid>
                    </StackPanel>

                    <!--  Steps List  -->
                    <ListView
                        Grid.Row="1"
                        BorderThickness="0"
                        ItemsSource="{x:Bind CreationViewModel.Steps, Mode=OneWay}"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SelectionMode="None">

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:CreationStep">
                                <Grid Margin="0,2" Padding="8,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Status Icon - CONVERTER ile  -->
                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Top"
                                        FontSize="16"
                                        Text="{Binding Converter={StaticResource StepDisplayConverter}, ConverterParameter=IconOnly}" />

                                    <!--  Step Info  -->
                                    <StackPanel Grid.Column="1" Spacing="2">
                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                            Text="{Binding Converter={StaticResource StepDisplayConverter}, ConverterParameter=NameOnly}" />
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="{x:Bind Message, Mode=OneWay}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>

                                    <!--  Duration - CONVERTER ile  -->
                                    <TextBlock
                                        Grid.Column="2"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Top"
                                        FontSize="11"
                                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                        Text="{Binding Converter={StaticResource DurationDisplayConverter}}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!--  Footer  -->
                    <StackPanel
                        Grid.Row="2"
                        Margin="0,20,0,0"
                        Spacing="12">
                        <!--  Success Message  -->
                        <Border
                            Padding="16"
                            Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}"
                            BorderBrush="{ThemeResource SystemFillColorSuccessBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Visibility="{x:Bind CreationViewModel.IsCompleted, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">

                            <StackPanel Spacing="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon
                                        FontSize="16"
                                        Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                        Glyph="&#xE73E;" />
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Text="İşlem Tamamlandı" />
                                </StackPanel>
                                <TextBlock
                                    FontSize="13"
                                    Text="{x:Bind CreationViewModel.CreationResult.SuccessMessage, Mode=OneWay}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>

                        <!--  Error Message  -->
                        <Border
                            Padding="16"
                            Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                            BorderBrush="{ThemeResource SystemFillColorCriticalBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Visibility="{x:Bind CreationViewModel.HasError, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">

                            <StackPanel VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon
                                        FontSize="16"
                                        Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                        Glyph="&#xE783;" />
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Text="İşlem Başarısız" />
                                </StackPanel>
                                <TextBlock
                                    FontSize="13"
                                    Text="{x:Bind CreationViewModel.CreationResult.ErrorMessage, Mode=OneWay}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>

                        <!--  Buttons  -->
                        <Button
                            MinWidth="100"
                            HorizontalAlignment="Right"
                            Command="{x:Bind CreationViewModel.CloseCommand}"
                            Content="Kapat"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Visibility="{x:Bind CreationViewModel.IsCreating, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
