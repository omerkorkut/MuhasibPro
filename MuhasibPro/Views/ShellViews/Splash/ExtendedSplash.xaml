<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MuhasibPro.Views.ShellViews.Splash.ExtendedSplash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dev="using:DevWinUI"
    xmlns:local="using:MuhasibPro.Views.ShellViews.Splash"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="OnPageLoaded"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Fade In Animation  -->
        <Storyboard x:Name="FadeInStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="CurrentMessage"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="CurrentMessageTransform"
                Storyboard.TargetProperty="Y"
                From="20"
                To="0"
                Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!--  Fade Out Animation for Previous Message  -->
        <Storyboard x:Name="FadeOutStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="PreviousMessage"
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="0"
                Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="PreviousMessageTransform"
                Storyboard.TargetProperty="Y"
                From="0"
                To="-20"
                Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>


    </Page.Resources>

    <Grid x:Name="SplashOverlay">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0" Color="{ThemeResource LayerFillColorDefault}" />
                <GradientStop Offset="1" Color="{ThemeResource CardBackgroundFillColorDefault}" />
            </LinearGradientBrush>
        </Grid.Background>

        <!--  Animated background elements  -->
        <Grid x:Name="BackgroundElements" Opacity="0.03">
            <Ellipse
                Width="400"
                Height="400"
                Margin="-200,-200,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="{ThemeResource AccentFillColorDefaultBrush}" />
            <Ellipse
                Width="300"
                Height="300"
                Margin="0,0,-150,-150"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Fill="{ThemeResource AccentFillColorDefaultBrush}" />
        </Grid>

        <!--  Main Content  -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Logo with animation  -->
            <Grid Grid.Row="0" Margin="0,0,0,0">

                <Image
                    Width="350"
                    Height="350"
                    Source="ms-appx:///Assets/Store/SplashScreen.png"
                    Stretch="Uniform" />
            </Grid>

            <!--  App Name  -->
            <TextBlock
                Grid.Row="1"
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                FontSize="42"
                FontWeight="SemiBold"
                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                Text="{x:Bind ApplicationName}" />

            <!--  Messages Container with smooth transitions  -->
            <Grid
                Grid.Row="2"
                Height="80"
                Margin="0,0,0,30">

                <!--  Previous Message (fading out and moving up)  -->
                <TextBlock
                    x:Name="PreviousMessage"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Opacity="0"
                    Text="">
                    <TextBlock.RenderTransform>
                        <TranslateTransform x:Name="PreviousMessageTransform" />
                    </TextBlock.RenderTransform>
                </TextBlock>

                <!--  Current Message (fading in and moving up)  -->
                <TextBlock
                    x:Name="CurrentMessage"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Medium"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                    Opacity="0"
                    Text="Başlatılıyor..."
                    TextWrapping="Wrap">
                    <TextBlock.RenderTransform>
                        <TranslateTransform x:Name="CurrentMessageTransform" />
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Grid>

            <!--  Modern Progress Bar  -->
            <Grid Grid.Row="3" Width="400">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Progress Bar Background  -->
                <Border
                    Grid.Row="0"
                    Height="4"
                    Background="{ThemeResource ControlFillColorDisabledBrush}"
                    CornerRadius="2"
                    Opacity="0.3" />

                <!--  Actual Progress Bar  -->
                <ProgressBar
                    x:Name="progress"
                    Grid.Row="0"
                    Height="4"
                    Background="Transparent"
                    CornerRadius="2"
                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                    Maximum="100"
                    Value="{x:Bind ProgressValue, Mode=OneWay}" />

                <!--  Progress Percentage  -->
                <TextBlock
                    Grid.Row="1"
                    Margin="0,12,0,0"
                    HorizontalAlignment="Center"
                    FontSize="13"
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                    Opacity="0.7">
                    <Run Text="{x:Bind ProgressValue, Mode=OneWay}" />
                    <Run Text="%" />
                </TextBlock>
            </Grid>
        </Grid>

        <!--  Footer  -->
        <Grid Padding="30,0,30,20" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                HorizontalAlignment="Left"
                FontSize="11"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                Opacity="0.6"
                Text="{x:Bind Version}" />

            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Right"
                FontSize="11"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                Opacity="0.6"
                Text="{x:Bind CopyrightText}" />
        </Grid>
    </Grid>
</Page>
