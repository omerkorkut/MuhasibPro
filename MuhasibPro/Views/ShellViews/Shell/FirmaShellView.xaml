<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MuhasibPro.Views.ShellViews.Shell.FirmaShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:firmalar="using:MuhasibPro.Views.Firmalar.List"
    xmlns:local="using:MuhasibPro.Views.ShellViews.Shell"
    xmlns:malidonemler="using:MuhasibPro.Views.Firmalar.Details"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="24,16"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Logo  -->
                <Image
                    Grid.Column="0"
                    Width="50"
                    Height="50"
                    Margin="0,0,24,0"
                    Source="/Assets/AppIcon.png"
                    Stretch="Uniform" />
                <PersonPicture
                    Grid.Column="1"
                    Width="{StaticResource CardPictureRadius}"
                    Height="{StaticResource CardPictureRadius}"
                    ProfilePicture="{x:Bind ViewModel.ViewModelArgs.UserInfo.KullaniciModel.ResimSource, Mode=OneWay, Converter={StaticResource ObjectToImageConverter}}" />
                <Grid Grid.Column="2" Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Spacing="2">

                        <TextBlock
                            x:Name="UserNameText"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                            Text="{x:Bind ViewModel.ViewModelArgs.UserInfo.KullaniciModel.AdiSoyadi, Mode=OneWay}" />
                        <TextBlock
                            x:Name="UserEmailText"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                            Text="{x:Bind ViewModel.ViewModelArgs.UserInfo.KullaniciModel.Eposta, Mode=OneWay}" />
                        <TextBlock
                            x:Name="UserRoleDetailText"
                            FontSize="13"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="{x:Bind ViewModel.ViewModelArgs.UserInfo.KullaniciModel.Rol.RolAdi, Mode=OneWay}" />


                    </StackPanel>
                    <!--  Title  -->
                    <StackPanel
                        Grid.Column="1"
                        Margin="50,0"
                        VerticalAlignment="Center"
                        Spacing="4">
                        <TextBlock
                            FontWeight="SemiBold"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Text="Firma ve Mali Dönem Seçimi" />

                    </StackPanel>

                    <!--  Logout Button  -->

                </Grid>

            </Grid>
        </Border>

        <!--  Main Content  -->
        <Grid
            Grid.Row="1"
            Padding="24"
            Background="{ThemeResource LayerOnMicaBaseAltFillColorDefault}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" MinWidth="300" />
            </Grid.ColumnDefinitions>

            <!--  Sol Panel - Firmalar  -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Firma Header  -->
                <Border
                    Grid.Row="0"
                    Padding="16,12"
                    CornerRadius="8,8,0,0"
                    Style="{StaticResource GlassPanel}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            FontSize="20"
                            Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
                            Glyph="&#xE7EE;" />

                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Text="Firmalar" />
                    </Grid>
                </Border>

                <!--  Firma Listesi  -->
                <Border
                    Grid.Row="1"
                    Padding="10"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1,0,1,1"
                    CornerRadius="0,0,8,8">
                    <Grid>
                        <!--  Loading Indicator  -->
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="12"
                            Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay}">
                            <ProgressRing
                                Width="40"
                                Height="40"
                                IsActive="True" />
                            <TextBlock
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="Firmalar yükleniyor..." />
                        </StackPanel>

                        <!--  Firma List Control  -->
                        <firmalar:FirmalarList
                            x:Name="firmaList"
                            ViewModel="{x:Bind ViewModel.FirmaList, Mode=OneWay}"
                            Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />

                    </Grid>
                </Border>


            </Grid>

            <!--  Sağ Panel - Mali Dönemler  -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Mali Dönem Header  -->
                <Border
                    Grid.Row="0"
                    Padding="16,12"
                    CornerRadius="8,8,0,0"
                    Style="{StaticResource GlassPanel}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            FontSize="20"
                            Glyph="&#xE787;" />

                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Text="Mali Dönemler" />
                    </Grid>
                </Border>

                <!--  Mali Dönem Listesi  -->
                <Border
                    Grid.Row="1"
                    Padding="10"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1,0,1,1"
                    CornerRadius="0,0,8,8">
                    <Grid>
                        <!--  Firma Seçilmedi Mesajı  -->
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="12"
                            Visibility="{x:Bind ViewModel.IsFirmaSelected, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <FontIcon
                                FontSize="48"
                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                Glyph="&#xE7EE;" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="Lütfen önce firma seçiniz" />
                        </StackPanel>

                        <!--  Mali Dönem List Control  -->

                        <malidonemler:FirmaMaliDonemler
                            x:Name="maliDonemList"
                            ViewModel="{x:Bind ViewModel.MaliDonemList, Mode=OneWay}"
                            Visibility="{x:Bind ViewModel.IsFirmaSelected, Mode=OneWay}" />
                    </Grid>
                </Border>


            </Grid>
        </Grid>

        <!--  Bottom Panel - Seçim Özeti ve Devam Butonu  -->
        <Border
            Grid.Row="2"
            Padding="24,16"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Seçim Özeti  -->
                <Grid Grid.Column="0" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Icon  -->
                    <Border
                        Grid.Column="0"
                        Width="48"
                        Height="48"
                        Margin="0,0,16,0"
                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                        CornerRadius="24"
                        Visibility="{x:Bind ViewModel.HasSelection, Mode=OneWay}">
                        <FontIcon
                            FontSize="20"
                            Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                            Glyph="&#xE73E;" />
                    </Border>

                    <!--  Bilgiler  -->
                    <StackPanel Grid.Column="1" Spacing="4">
                        <TextBlock
                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                            Style="{StaticResource BodyStrongTextBlockStyle}"
                            Text="{x:Bind ViewModel.SecimOzeti, Mode=OneWay}" />

                        <!--  Detaylı Bilgi (Seçim yapıldıysa)  -->
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="16"
                            Visibility="{x:Bind ViewModel.IsFirmaSelected, Mode=OneWay}">
                            <!--  Firma  -->
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon
                                    FontSize="14"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Glyph="&#xE7EE;" />
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind ViewModel.FirmaBilgisi, Mode=OneWay}" />
                            </StackPanel>

                            <!--  Dönem  -->
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon
                                    FontSize="14"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Glyph="&#xE787;" />
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind ViewModel.DonemBilgisi, Mode=OneWay}" />
                            </StackPanel>

                            <!--  Veritabanı  -->
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon
                                    FontSize="14"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Glyph="&#xE8F1;" />
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind ViewModel.VeritabaniBilgisi, Mode=OneWay}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon
                                    FontSize="14"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Glyph="&#xEDA3;" />
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind ViewModel.VeritabaniBaglantiDurumu, Mode=OneWay}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Margin="20,0" Style="{StaticResource DangerButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="16" Glyph="&#xE7E8;" />
                            <TextBlock Text="Çıkış Yap" />
                        </StackPanel>
                    </Button>
                    <Button
                        MinWidth="160"
                        Command="{x:Bind ViewModel.DevamEtCommand}"
                        IsEnabled="{x:Bind ViewModel.HasSelection, Mode=OneWay}"
                        Style="{StaticResource PrimaryButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ProgressRing
                                Width="16"
                                Height="16"
                                IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}"
                                Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay}" />
                            <TextBlock Text="Devam Et" />
                            <FontIcon FontSize="16" Glyph="&#xE8AD;" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <!--  Devam Et Butonu  -->

            </Grid>
        </Border>
    </Grid>
</Page>
