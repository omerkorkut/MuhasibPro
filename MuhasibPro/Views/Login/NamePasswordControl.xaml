<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="MuhasibPro.Views.Login.NamePasswordControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MuhasibPro.Views.Login"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="340"
    mc:Ignorable="d">

    <StackPanel Width="320">
        <TextBox
            x:Name="userName"
            BorderBrush="{StaticResource ApplicationPressedForegroundThemeBrush}"
            BorderThickness="1"
            FontSize="18"
            PlaceholderText="Kullanıcı Adı"
            Text="{x:Bind UserName, Mode=TwoWay}" />
        <Rectangle Margin="8" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <PasswordBox
                BorderBrush="{StaticResource ApplicationSecondaryForegroundThemeBrush}"
                BorderThickness="1"
                FontSize="18"
                Password="{x:Bind Password, Mode=TwoWay}"
                PlaceholderText="Şifre" />
            <Button
                Grid.Column="1"
                Padding="5"
                BorderBrush="Gray"
                BorderThickness="1"
                Command="{x:Bind LoginWithPasswordCommand}"
                IsTapEnabled="False">
                <SymbolIcon Foreground="{StaticResource ApplicationSecondaryForegroundThemeBrush}" Symbol="Forward" />
            </Button>
        </Grid>
    </StackPanel>

</UserControl>
