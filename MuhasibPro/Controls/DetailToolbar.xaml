<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MuhasibPro.Controls.DetailToolbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MuhasibPro.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="42"
    d:DesignWidth="800">

    <CommandBar
        x:Name="commandBar"
        Margin="0 0 0 10"
        Background="Transparent"
        DefaultLabelPosition="Right"
        Style="{StaticResource ToolBarStyle}">
        <AppBarButton
            x:Name="buttonBack"
            HorizontalAlignment="Left"
            Icon="Back"
            Label="Geri"
            LabelPosition="Default"
            Style="{StaticResource ModernToolBarButtonStyle}"
            Tag="back" />

        <AppBarButton
            x:Name="buttonEdit"
            HorizontalAlignment="Left"
            Icon="Edit"
            Label="Düzenle"
            LabelPosition="Default"
            Style="{StaticResource  ModernToolBarButtonStyle}"
            Tag="edit" />

        <AppBarButton
            x:Name="buttonDelete"
            HorizontalAlignment="Left"
            Icon="Delete"
            Label="Sil"
            LabelPosition="Default"
            Style="{StaticResource ModernToolBarButtonStyle}"
            Tag="delete" />       

        <AppBarButton
            x:Name="buttonCancel"
            HorizontalAlignment="Left"
            Icon="Cancel"
            Label="İptal"
            LabelPosition="Default"
            Style="{StaticResource ModernToolBarButtonStyle}"
            Tag="cancel" />

        <AppBarButton
            x:Name="buttonSave"
            HorizontalAlignment="Left"
            Icon="Save"
            Label="Kaydet"
            LabelPosition="Default"
            Style="{StaticResource ModernToolBarButtonStyle}"
            Tag="save" />
    </CommandBar>
</UserControl>